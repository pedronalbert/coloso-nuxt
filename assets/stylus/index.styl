@require 'configs/*'
@require 'utils/*'
@require 'colors'

.u-flexer
  flex: 1

.overflow-x-hidden
  overflow-x: hidden

body
  background-color: #f5f5f5 !important;
  font-size: 16px !important;

  & > div
    height: 100%;

a.styless
  &:active
  &:visited
  &:link
  &:hover
    color: inherit !important
    text-decoration: none


i {
  @extend .text-secondary;
}

// Scroll
::-webkit-scrollbar
{
  width: .5em;  /* for vertical scrollbars */
  height: .5em; /* for horizontal scrollbars */
}

::-webkit-scrollbar-track
{
  background: #EEEEEE;
}

::-webkit-scrollbar-thumb
{
  background: #BDBDBD;
  border-radius: .75em;
  border: 1px solid #757575;
}
