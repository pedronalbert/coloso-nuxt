@require '_variables'

media-breakpoint-down(screen)
  @media (max-width: nextBreakpoint[screen] - 1)
    {block}

media-breakpoint-up(screen)
  @media (min-width: gridBreakpoints[screen])
    {block}

media-breakpoint-only(screen)
  @media (min-width: gridBreakpoints[screen]) and (max-width: nextBreakpoint[screen] - 1)
    {block}

active-shadow()
  &:active
    box-shadow: 0 1px 5px rgba(0,0,0,.2),0 2px 2px rgba(0,0,0,.14),0 3px 1px -2px rgba(0,0,0,.12)
